{
  "name": "memran/marwa-router",
  "description": "Attribute + fluent routing over league/route with PSR-7/15/16 support.",
  "type": "library",
  "keywords": [
    "router",
    "routing",
    "league-route",
    "php8-attributes",
    "psr-7",
    "psr-15",
    "psr-16"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Mohammad Emran",
      "role": "Maintainer"
    }
  ],
  "require": {
    "php": "^8.1",
    "laminas/laminas-diactoros": "^3.0",
    "laminas/laminas-httphandlerrunner": "^2.6",
    "league/route": "^6.2",
    "memran/marwa-support": "^1.2",
    "psr/container": "^1.1 || ^2.0",
    "psr/simple-cache": "^1.0 || ^2.0 || ^3.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.64",
    "memran/php-testify": "^1.0",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "Marwa\\Router\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Marwa\\Router\\Tests\\": "tests/",
      "Examples\\": "examples/"
    }
  },
  "bin": [
    "bin/routes-dump.php"
  ],
  "scripts": {
    "test": "php vendor/bin/testify",
    "analyse": "phpstan analyse -l 8 src",
    "cs": "php-cs-fixer fix --dry-run -v",
    "cs-fix": "php-cs-fixer fix -v",
    "validate": "composer validate --strict"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "minimum-stability": "stable"
  }
}
