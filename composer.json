{
  "name": "memran/marwa-router",
  "description": "Attribute-driven router on top of league/route. Scans controller classes and registers routes automatically.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Marwa\\Router\\": "src/"
    }
  },
"require": {
    "psr/simple-cache": "^3.0",
    "laminas/laminas-diactoros": "^3.1",
    "laminas/laminas-httphandlerrunner": "^2.6",
    "league/route": "^6.2",
    "psr/container": "^1.1 || ^2.0",
    "psr/http-message": "^1.1 || ^2.0",
    "psr/http-server-middleware": "^1.0",
    "psr/http-server-handler": "^1.0"
  },
  "require-dev": {
    "laminas/laminas-diactoros": "^3.6",
    "laminas/laminas-httphandlerrunner": "^2.12",
    "phpunit/phpunit": "^10.5"
  },
  "authors": [
        {
            "name": "Mohammad Emran",
            "email": "memran.dhk@gmail.com"
        }
    ],
    "keywords": ["router", "routing", "annotations", "attributes", "php8", "league-route"],
    "homepage": "https://github.com/memran/marwa-router",
    "minimum-stability": "stable",
    "prefer-stable": true
}
